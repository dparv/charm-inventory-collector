settings:
  collection_path: {{ collection_path }}
  juju_data: {{ juju_data }}
  customer: {{ customer }}
  site: {{ site }}

models:
{%- for model in models %}
  - {{ model }}
{%- endfor %}

targets:
{%- for target in targets %}
  - 
   endpoint: {{target['ip']}}:{{target['port']}}
   hostname: {{target['hostname']}}
   customer: {{target['customer']}}
   site: {{target['site']}}
   model: {{target['model']}}
{%- endfor %}
